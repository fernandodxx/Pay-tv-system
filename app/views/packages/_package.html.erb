<div id="<%= dom_id package %>">
  <p>
    <strong>Name:</strong>
    <%= package.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= package.price %>
  </p>

  <p>
    <strong>Plan:</strong>
    <%= package.plan_id %>
  </p>
  
  <p>
    <strong>Additional Services:</strong>
    <%= package.additional_services.map(&:name).join(', ') %>
  </p>

  <p>
    <strong>Total Price:</strong>
    <%= package.price_all %>
  </p>
</div>

<h1>Pacote: <%= @package.name %></h1>

<p><strong>Plano:</strong> <%= @package.plan.name %></p>
<p><strong>Valor:</strong> R$ <%= @package.price_all %></p>

