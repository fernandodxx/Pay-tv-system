    <%= f.collection_select :plan_id, @plans, :id, :name, include_blank: true %>
  </div>

  <div>
    <%= f.label :package_id, "Pacote (ou deixe em branco)" %><br>
    <%= f.collection_select :package_id, @packages, :id, :name, include_blank: true %>
  </div>

  <div>
